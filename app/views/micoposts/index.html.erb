<p id="notice"><%= notice %></p>

<h1>Micoposts</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @micoposts.each do |micopost| %>
      <tr>
        <td><%= micopost.content %></td>
        <td><%= micopost.user_id %></td>
        <td><%= link_to 'Show', micopost %></td>
        <td><%= link_to 'Edit', edit_micopost_path(micopost) %></td>
        <td><%= link_to 'Destroy', micopost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Micopost', new_micopost_path %>
